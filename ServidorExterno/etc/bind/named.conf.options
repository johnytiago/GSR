acl goodclients {
        10.0.0.0/24;
        localhost;
        localnets;
};

options {
        directory "/var/cache/bind";

        recursion yes;
        allow-query { goodclients; };

        forwarders {
                8.8.8.8;
        };



        auth-nxdomain no;    # conform to RFC1035
        listen-on-v6 { any; };
};
